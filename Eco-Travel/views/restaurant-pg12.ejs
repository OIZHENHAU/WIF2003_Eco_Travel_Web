<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Back 按钮点击事件
  document.getElementById('backBtn').addEventListener('click', function() {
    window.history.back();
  });
</script>
<script src="/empty-history.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/swiperMainPage.js"></script>
    <script>
      let popup = document.getElementById("popup");
      let popupPlanner = document.getElementById("popup-planner");
      const form = document.getElementById('subscribeForm');

      function openPopUp() { 
        popup.classList.add("open-popup");
      }

      function closePopUp() {
          popup.classList.remove("open-popup");
           window.history.go(-1);
      }

      function redirectToPayment() {
          const numOfPerson = document.querySelector('input[name="num_of_person"]').value;
          const pricePerPerson = <%=restaurant.price %>;

          if (!numOfPerson || numOfPerson <= 0) {
            alert("Please enter a valid number of persons.");
            return;
          }

          const totalPrice = pricePerPerson;

          // Redirect to payment page with query parameters
          window.location.href = `/payment-page?total=${totalPrice}`;
      }
    </script>
</body>
</html>
