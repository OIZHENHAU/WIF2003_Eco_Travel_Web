  <style>
    /* 让页面整体使用 Flex 布局，保证 footer 始终在底部 */
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #f4faff;
    }
    body {
      display: flex;
      flex-direction: column;
    }
    /* 主体内容容器 */
    .content-wrapper {
      flex: 1 0 auto;
    }
    /* 导航栏 */
    .navbar {
      background-color: #2196f3;
    }
    .navbar .navbar-brand,
    .navbar .nav-link,
    .navbar .bi {
      color: #fff !important;
    }
    /* 详情头部 */
    .detail-header {
      background-color: #fff;
      padding: 15px 20px;
      border-bottom: 1px solid #ddd;
    }
    .detail-header .badge {
      font-size: 0.8rem;
      font-weight: 600;
      margin-left: 10px;
    }
    /* 主要内容区域 */
    .detail-content {
      padding: 20px;
    }
    .detail-content .image-container img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 8px;
    }
    .facilities, .other-info {
      font-size: 0.9rem;
      color: #555;
      margin-top: 10px;
    }
    .facilities i, .other-info i {
      margin-right: 5px;
      color: #0d6efd;
    }
    .detail-actions {
      margin-top: 15px;
    }
    .detail-actions a {
      text-decoration: none;
      font-weight: 500;
      color: #0d6efd;
      margin-right: 15px;
    }
    /* 预订区域 */
    .booking-section {
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      margin-top: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .booking-section h5 {
      margin-bottom: 15px;
      font-size: 1.1rem;
      font-weight: 600;
    }
    /* 评分区域 */
    .rating-section {
      margin-top: 0px;
    }
    .rating-section .stars i {
      color: #ffc107;
      margin-right: 3px;
    }
    /* 页脚 */
    footer {
      flex-shrink: 0;
      background-color: #343a40;
      color: #fff;
      text-align: center;
      padding: 20px 0;
    }
    /* Back 按钮 */
    .back-btn {
      margin-bottom: 1rem;
    }

    .box-flex {
      display: flex;
      gap: 100px;
    }

    .btn-danger.fav-active {
      color: white !important;
      border: 1px solid white !important;
    }

    .popup {
        width: 400px;
        background: white;
        border-radius: 6px;
        position: absolute;
        left: 50%;
        transform: translate(-55%, -50%) scale(0.1);
        text-align: center;
        padding: 0 30px 30px;
        color: #333;
        visibility: hidden;
        transition: transform 0.4s, top 0.4s;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .open-popup {
        visibility: visible;
        transform: translate(-55%, -50%) scale(1);
    }

    .popup img {
        width: 100px;
        margin-top: -50px;
        margin-left: 110px;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .popup h2 {
        margin: 30px 0 10px;
    }

    .popup button {
        box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
    }

    .price-block {
      text-align: right;
      font-weight: bold;
      color: #000;
    }

  </style>
</head>
<body>

<!-- 导航栏 -->
