<!-- Header Close -->

<!-- 主体内容容器 -->
<div class="content-wrapper" style="margin-top: 120px;">

  <%
    function isFavourite(restaurant, favouriteList) {
      return favouriteList.some(fav => fav.name === restaurant.name);
    }  
  %>
  <!-- 详情头部 -->
  <div class="detail-header d-flex align-items-center justify-content-between">
    <div>
      <h4 class="mb-0"><%=restaurant.name %></h4>
      <span class="badge bg-info text-dark" style="margin-top: 10px;">Top Rated</span>
    </div>
  </div>

  <!-- 详情内容 -->
  <div class="detail-content container">
    <!-- Back 按钮 -->
    <button id="backBtn" class="btn btn-secondary back-btn">← Back</button>

    <div class="row">
      <!-- 图片区域 -->
      <div class="col-md-4 image-container">
        <img src="<%=restaurant.image %>" alt="Sushi Hasaki Tokyo" id="restaurant-img">
      </div>
      <!-- 文字信息区域 -->
      <div class="col-md-8">
        <p>
          <%=restaurant.description %>
        </p>
        <!-- 设施说明 -->
        <div class="facilities">
          <i class="bi bi-check-circle-fill"></i>
          <%=restaurant.food_info %>
        </div>
        <!-- 支付方式 -->
        <div class="other-info">
          <i class="bi bi-credit-card-fill"></i>
          <%=restaurant.payment_info %>
        </div>
        <!-- 地址及链接 -->
        <div class="detail-actions mt-3">
          <div class="mb-1">
            <i class="bi bi-geo-alt-fill text-primary"></i>
            <span><%=restaurant.location %></span>
          </div>
          <a href="<%=restaurant.official_website %>" target="_blank">
            <i class="bi bi-globe"></i> Visit Website
          </a>
          <a href="<%=restaurant.official_menu %>" target="_blank">
            <i class="bi bi-file-earmark-text"></i> View Menu
          </a>

          <div class="popup" id="popup">
                      <img src="/blue-tick.png">
                      <h2 id="popup-title" style="color: black;">Details Updated!</h2>
                      <p id="popup-message" style="color: black" style="margin-bottom: 40px;">Please check your details accordingly. Thanks!</p>
                      <button  class="btn btn-outline-primary" type="button" style="top: 90%;" onClick="closePopUp()">OK</button>
          </div>
        </div>
        <!-- 营业信息 -->
        <p class="mt-2" style="margin-bottom: -10px;">
          <i class="bi bi-clock-fill text-primary"></i>
          Open daily: <%=restaurant.operating_hour %>
        </p>

        <!-- 评分与操作区域 -->
        <div>
            <div class="row rating-section">
              <div class="col-md-6 mt-4">
                <h6>900+ Reviews</h6>
                <div class="stars">
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-fill"></i>
                  <i class="bi bi-star-half"></i>
                  <span class="ms-2"><%=restaurant.rating %>/5</span>
                </div>
              </div>
            </div>

            <div class="col-12 text-end">
              <div class="price-block" style="font-size: 40px;">
                  RM <%=restaurant.price %> <span class="fw-normal" style="font-size:0.85rem;">/ reserve</span>
                </div>

              <form action="/add-favourite/<%=restaurant.category %>/<%=restaurant.name.toLowerCase()%>" method="post">
                    <button class="btn btn-outline-primary <%= isFavourite(restaurant, favourite) ? 'btn-danger fav-active' : 'btn-outline-primary' %>" onclick="openPopUp()">
                      <%= isFavourite(restaurant, favourite) ? 'Remove Favourite' : 'Add Favourite' %>
                    </button>
              </form>
            </div>
          </div>
      </div>
    </div>

    <!-- 预订和规划区域 -->
    <div class="row booking-section mt-4">
      <div class="col-md-12">
        <h5>Reserve Your Table</h5>
        <form action="/add-planner/<%=restaurant.category %>/<%=restaurant.name.toLowerCase() %>" method="post">
          <div class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Arrival Date</label>
              <input type="date" name="date" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">No. of Persons</label>
              <input type="number" name="num_of_person" class="form-control" placeholder="2" min="1" required>
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="button" onClick="redirectToPayment()" class="btn btn-primary me-2" style="margin-left: 190px;">Book Now</button>
              <button class="btn btn-outline-primary" onClick="openPopUp()">Add Planner</button>
            </div>
          </div>
        </form>
      </div>
    </div>

  </div>
</div>

<!-- Footer Start -->
<footer id="footer">
