<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login & Register</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800&family=Source+Sans+Pro:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/animations.css">
  <link rel="stylesheet" href="/dark-mode.css">
  <script src="/animations.js" defer></script>
  <script src="/config.js" defer></script>
  <script src="/dark-mode.js" defer></script>
  <script src="/mongodb.js" defer></script>
  <script src="/validation.js" defer></script>
  
  <style>
    /* Enhanced OAuth button styles */
    .oauth-section {
      margin: 30px 0;
      text-align: center;
    }

    .oauth-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 14px 20px;
      margin: 10px 0;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }

    .oauth-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }

    .oauth-button:hover::before {
      left: 100%;
    }

    .sso-button {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
      position: relative;
      overflow: hidden;
    }

    .sso-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }

    .sso-button::before {
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
    }

    .sso-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 24px;
      height: 24px;
      margin-right: 12px;
    }

    .app-logo {
      width: 24px;
      height: 24px;
      border-radius: 4px;
      object-fit: contain;
    }

    .fallback-icon {
      font-size: 20px;
      line-height: 1;
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 25px 0;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: linear-gradient(to right, transparent, #e0e0e0, transparent);
    }

    .divider span {
      padding: 0 20px;
      color: #666;
      font-size: 14px;
      font-weight: 500;
    }

    /* Update existing social buttons to be less prominent - REMOVED */

    /* Responsive design for SSO buttons */
    @media (max-width: 768px) {
      .oauth-button {
        font-size: 14px;
        padding: 12px 16px;
      }
      
      .sso-icon {
        width: 20px;
        height: 20px;
        margin-right: 10px;
      }

      .app-logo {
        width: 20px;
        height: 20px;
      }

      .fallback-icon {
        font-size: 18px;
      }
    }

    /* Loading state for OAuth buttons */
    .oauth-button.loading {
      opacity: 0.7;
      cursor: not-allowed;
    }

    .oauth-button.loading::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255,255,255,0.3);
      border-radius: 50%;
      border-top-color: white;
      animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>

<body>
  <!-- Loading Spinner -->
  <div class="loading-overlay" style="display: none;">
    <span class="loader"></span>
  </div>

  <div class="theme-toggle">
    <input type="checkbox" id="darkModeToggle" class="dark-mode-toggle">
    <label for="darkModeToggle" class="toggle-label">
      <span class="toggle-icon"></span>
    </label>
  </div>

  <div class="container">
    <div class="form-container">

      <!-- Login Form -->
      <div class="form-section login-section active">
        <div class="left-panel">
          <h1 class="welcome-text">HELLO, WELCOME!</h1>
          <p class="welcome-subtext">Do you have any account?</p>
          <button class="switch-btn register-switch">REGISTER</button>
        </div>

        <div class="right-panel">
          <h2 class="form-title">LOGIN</h2>
          
          <!-- SSO Section -->
          <div class="oauth-section">
            <a href="/auth" class="oauth-button sso-button" id="ssoLogin">
              <div class="sso-icon">
                <img src="/img/logo.png" alt="App Logo" class="app-logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
                <span class="fallback-icon" style="display: none;">ðŸš€</span>
              </div>
              Single Sign-On
            </a>
          </div>

          <div class="divider">
            <span>or continue with email</span>
          </div>

          <form id="loginForm" class="form" action="/login" method="post">
            <div class="form-group">
              <input type="text" id="loginUsername" class="form-input" placeholder="Username" name="username" required>
              <span class="input-icon username-icon"></span>
            </div>

            <div class="form-group">
              <input type="password" id="loginPassword" class="form-input" placeholder="Password" name="password" required>
              <span class="input-icon password-icon"></span>
              <span class="toggle-password" data-target="loginPassword"></span>
            </div>

            <div class="form-extra">
              <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
            </div>

            <button type="submit" class="form-button login-button">Login</button>
          </form>
        </div>
      </div>
      
      <!-- Register Form -->
      <div class="form-section register-section">
        <div class="left-panel">
          <h1 class="welcome-text">WELCOME BACK!</h1>
          <p class="welcome-subtext">Do you have an account?</p>
          <button class="switch-btn login-switch">LOGIN</button>
        </div>

        <div class="right-panel">
          <h2 class="form-title">REGISTER</h2>
          
          <!-- SSO Section -->
          <div class="oauth-section">
            <a href="/auth" class="oauth-button sso-button" id="ssoRegister">
              <div class="sso-icon">
                <img src="/img/logo.png" alt="App Logo" class="app-logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline-block';">
                <span class="fallback-icon" style="display: none;">ðŸš€</span>
              </div>
              Single Sign-On
            </a>
          </div>

          <div class="divider">
            <span>or create account with email</span>
          </div>

          <form id="registerForm" class="form" action="/signup" method="post">
            <div class="form-group">
              <input type="text" id="registerUsername" class="form-input" placeholder="Username" name="username" required>
              <span class="input-icon username-icon"></span>
              <span class="error-message" id="usernameError"></span>
            </div>

            <div class="form-group">
              <input type="email" id="registerEmail" class="form-input" placeholder="Email" name="email" required>
              <span class="input-icon email-icon"></span>
              <span class="error-message" id="emailError"></span>
            </div>

            <div class="form-group">
              <input type="password" id="registerPassword" class="form-input" placeholder="Password" name="password" required>
              <span class="input-icon password-icon"></span>
              <span class="toggle-password" data-target="registerPassword"></span>
              <span class="error-message" id="passwordError"></span>
            </div>

            <div class="password-strength-meter">
              <div class="strength-section"></div>
              <div class="strength-section"></div>
              <div class="strength-section"></div>
              <div class="strength-section"></div>
            </div>

            <button type="submit" class="form-button register-button">Register</button>
          </form>
        </div>
      </div>

    </div>
  </div>

  <script>
    // SSO button loading states
    document.addEventListener('DOMContentLoaded', function() {
      const ssoButtons = document.querySelectorAll('.sso-button');
      
      ssoButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          // Add loading state
          this.classList.add('loading');
          
          // Show loading overlay
          document.querySelector('.loading-overlay').style.display = 'flex';
          
          // If there's an error, remove loading state after 5 seconds
          setTimeout(() => {
            this.classList.remove('loading');
            document.querySelector('.loading-overlay').style.display = 'none';
          }, 5000);
        });
      });

      // Handle SSO errors from URL parameters
      const urlParams = new URLSearchParams(window.location.search);
      const error = urlParams.get('error');
      
      if (error) {
        alert('Authentication failed. Please try again.');
        // Clean up URL
        window.history.replaceState({}, document.title, window.location.pathname);
      }

      // Add hover effects for enhanced user experience
      const formInputs = document.querySelectorAll('.form-input');
      formInputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
          if (!this.value) {
            this.parentElement.classList.remove('focused');
          }
        });
      });
    });

    // Enhanced form switching with SSO button updates
    document.addEventListener('DOMContentLoaded', function() {
      const loginSwitch = document.querySelector('.login-switch');
      const registerSwitch = document.querySelector('.register-switch');
      const loginSection = document.querySelector('.login-section');
      const registerSection = document.querySelector('.register-section');

      loginSwitch.addEventListener('click', function() {
        loginSection.classList.add('active');
        registerSection.classList.remove('active');
      });

      registerSwitch.addEventListener('click', function() {
        registerSection.classList.add('active');
        loginSection.classList.remove('active');
      });
    });
  </script>
</body>
</html>