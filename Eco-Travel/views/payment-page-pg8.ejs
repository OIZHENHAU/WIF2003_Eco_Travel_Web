    <!-- Payment Section -->
    <section id="payment" style="margin-top: 60px;">
        <div class="container">
            <div class="payment-container">
                <div class="payment-card">
                    <!-- Payment Methods -->
                    <div class="payment-methods">
                        <button class="payment-method-btn" data-method="paypal">
                            <i class="fa-brands fa-paypal"></i> PayPal
                        </button>
                        <button class="payment-method-btn" data-method="apple">
                            <i class="fa-brands fa-apple"></i> Pay
                        </button>
                        <button class="payment-method-btn" data-method="google">
                            <i class="fa-brands fa-google"></i> Pay
                        </button>
                    </div>

                    <!-- Divider -->
                    <div class="payment-divider">
                        <span class="divider-line"></span>
                        <span class="divider-text">or pay using credit card</span>
                        <span class="divider-line"></span>
                    </div>

                    <!-- Credit Card Form -->
                    <form id="credit-card-form">
                        <div class="form-group">
                            <label for="card-holder-name">Card Holder Full Name</label>
                            <input type="text" id="card-holder-name" class="form-input" placeholder="">
                        </div>
                        
                        <div class="form-group">
                            <label for="card-number">Card Number</label>
                            <input type="text" id="card-number" class="form-input" placeholder="">
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group half">
                                <label for="expiry-date">Expiry Date</label>
                                <input type="text" id="expiry-date" class="form-input" placeholder="MM/YY">
                            </div>
                            
                            <div class="form-group half">
                                <label for="cvv">CVV</label>
                                <input type="text" id="cvv" class="form-input" placeholder="">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn-checkout" style="margin-top: 0px;">Check Out</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

